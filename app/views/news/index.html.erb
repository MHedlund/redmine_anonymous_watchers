<%= render :parent %>

<% if Setting.notified_events.include?('news_added') %>
  <script type="text/javascript">
    var html = "<%= raw escape_javascript watcher_tag(@project.news_subscription, User.current)%>";
    if (typeof jQuery != 'undefined') {
      $("#content > div.contextual").append(html);
    } else {
      $$("#content > div.contextual")[0].insert(html);
    }
  </script>
<% end %>